.card
  .card-block.row
    .col-lg-12
      -#.card-header.proposal-budget
      -#  %strong
      -#    = number_to_currency(22, unit: '', precision: 2, format: "%n %u")
      -#  $
      - unless controller.action_name == 'show'
        %a.proposal-title{ href: constituency_campaign_path(constituency), title: constituency.title }
          %h3
            = constituency.title
      - else
        .proposal-title
          %h3
            = constituency.title
      -#- if suggestion.image.present?
      -#  = image_tag suggestion.image_url, class: 'proposal-image'
      - unless constituency.description.blank?
        - if controller.action_name == 'show'
          %p.proposal-description
            = constituency.description
        - else
          %p.proposal-description
            = truncate(constituency.description, length: 230, separator: ' ')
      -#%a.btn.btn-outline-primary.btn-sm.more-info-btn{ href: '', title: _('Votes') }
      -#  = _('Votes: %{votes}') % { votes: " " }
      %a.btn.btn-outline-primary.btn-sm.more-info-btn{ title: _('Status'), class: " " }
        = _('%{active}') % if constituency.active then {active: 'Active'} else {active: 'Inactive'} end
      -#= render 'partials/proposal-classifiers-list', classifiers: campaign.classifiers
    .col-lg-12
      = render 'partials/constituency-edit-btn', constituency: constituency