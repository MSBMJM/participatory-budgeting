= render 'partials/page-title', title: _('Proposals')

.vote-header
  .container
    %a#view-campaign.btn.btn-block.btn-primary{href: admin_campaign_index_path, role: 'button'}= _('Campaigns')
    %a#new-proposal.btn.btn-block.btn-primary{href: new_admin_proposal_path, role: 'button'}= _('New proposal')
    %a#view-suggestions.btn.btn-block.btn-primary{href: admin_suggestions_path, role: 'button'}= _('View Suggesttions')

.container
  .proposals-cont
    - @proposals.each do |proposal|
      .proposal{ id: 'proposal-'+proposal.id.to_s, data: { budget: proposal.budget } }
        = render 'partials/admin/proposal-item', proposal: proposal