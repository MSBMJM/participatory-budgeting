= render 'partials/page-title', title: _('Suggested Ideas')

.vote-header
  .container
    .row.stages-row
      .col-md-6
        .white-bg.stages-card
          %h3.serif.title-copy
            = raw _('<center> Submit your Community Development Idea! </center>')
          %br
          %p.body-copy
            = 'Anyone living or working in South East St. Andrew can submit an idea for promoting Youth Employment, Peace Building and Crime Reduction, Digital Skills/Literacy, or any other community development solution.'
          .btn-container
            %a#new-proposal.btn.btn-primary.btn-lg.btn-block.green-border-dark.border-1px{href: suggestion_community_path, role: 'button'}
              = 'SUBMIT NEW COMMUNITY DEVELOPMENT IDEA'

      .col-md-6
        .white-bg.stages-card
          %h3.serif.title-copy
            = raw _('<center> Submit your Youth Innovation Idea! </center>')
          %br
